@model IEnumerable<ViewModels.BlogItems.BlogViewModel>

@section metadata {
    <meta name="description" content="Homepage for Ron Brogan is a software developer by day and a serial hobbyist by night. Read blog posts and more." />    
}

<div class="banner navbar-buddy">
    <h1 class="no-margin">Hello, I'm Ron</h1>
    <h2 style="color: #222">
        I'm a software developer by day and a serial hobbyist by night. Learn new things with me.
    </h2>
</div>
<div class="container">
    <div class="row">
        <div class="column">
            @foreach (var blog in Model)
            {
                <div class="blog-post">
                    <span class="h1">@Html.ActionLink(blog.Title, "Details", "Posts", new { blogId = blog.Id }, null)</span>
                    <small>@blog.CreatedBy.FullName - @blog.DateCreated.ToShortDateString()</small>
                    <hr class="accent" />
                    <p class="no-margin">
                        @foreach (var category in blog.Categories)
                        {
                            <a href="/posts?category=@Url.Encode(category)" class="category-tag">@category</a>
                        }
                    </p>
                    <div>@Html.Raw(blog.BodyHtml)</div>
                </div>
            }
        </div>
    </div>
</div>